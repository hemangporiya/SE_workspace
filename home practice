#include <stdio.h>

int main() {
    int choice, quantity, total = 0;
    char moreOrders;

    do {
        printf("----------- Menu -----------\n");
        printf("1. Pizza    price = 180rs/pcs\n");
        printf("2. Burger   price = 100rs/pcs\n");
        printf("3. Dosa     price = 120rs/pcs\n");
        printf("4. Idli     price = 50rs/pcs\n");
        printf("Please Enter your choice... : ");
        scanf("%d", &choice);

        printf("\n");

        switch(choice) {
            case 1:
                printf("You have selected Pizza.\n");
                printf("Enter the quantity : ");
                scanf("%d", &quantity);
                printf("Amount = %d\n", 180 * quantity);
                total += 180 * quantity;
                break;
            case 2:
                printf("You have selected Burger.\n");
                printf("Enter the quantity : ");
                scanf("%d", &quantity);
                printf("Amount = %d\n", 100 * quantity);
                total += 100 * quantity;
                break;
            case 3:
                printf("You have selected Dosa.\n");
                printf("Enter the quantity : ");
                scanf("%d", &quantity);
                printf("Amount = %d\n", 120 * quantity);
                total += 120 * quantity;
                break;
            case 4:
                printf("You have selected Idli.\n");
                printf("Enter the quantity : ");
                scanf("%d", &quantity);
                printf("Amount = %d\n", 50 * quantity);
                total += 50 * quantity;
                break;
            default:
                printf("Invalid choice! Please try again.\n");
        }

        printf("Total Amount is = %d\n", total);
        printf("Do you want place more orders? y & n : ");
        scanf(" %c", &moreOrders); // space before %c to consume newline

        printf("\n");

    } while (moreOrders == 'y' || moreOrders == 'Y');

    printf("Thank you for your order. Please pay Rs. %d\n", total);

    return 0;
}
